@{
    ViewData["Title"] = "Enter Movies";
}

@model Mission4.Models.MovieResponse

<h2>Enter your favorite movie!</h2>
<div>
    <form method="post">
        <label asp-for="Category">Category: </label>
        <input id="Category" asp-for="Category" required/> <br />

        <label asp-for="Title">Title: </label>
        <input id="Title" asp-for="Title" required/> <br />

        <label asp-for="Year">Year: </label>
        <input id="Year" asp-for="Year" required/> <br />

        <label asp-for="Director">Director: </label>
        <input id="Director" asp-for="Director" required/> <br />

        <label asp-for="Rating">Rating: </label>
        <select id="Rating" asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> <br />

        <label asp-for="Edited">Edited: </label>
        <select id="Edited" asp-for="Edited" required>
            <option value="true">yes</option>
            <option value="false">no</option>
        </select> <br />

        <label asp-for="Lentto" required>Lent to: </label>
        <input id="Lent_to" asp-for="Lentto" /> <br />

        <label asp-for="Notes" required>Notes: </label>
        <textarea id="Notes" asp-for="Notes" rows="4"></textarea><br />

        <button type="submit">Submit</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>
